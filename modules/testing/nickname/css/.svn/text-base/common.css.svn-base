body {
  padding-bottom: 60px; }

.mui-title {
  position: static;
  color: #555;
  margin: 0; }

.btnBox {
  margin-top: r(20);
  text-align: center;
  display: flex;
  display: -webkit-flex;
  justify-content: space-around;
  flex-direction: row;
  -webkit-flex-direction: row;
  align-items: center;
  -webkit-align-items: center; }

.mui-btn {
  flex: 1;
  margin: auto 10px; }

.topTip {
  display: inline-block;
  line-height: r(52);
  width: 100%;
  height: r(52);
  font-size: r(24);
  background: #fff5e4;
  color: #d6a44c; }

.topTipIcon {
  display: inline-block;
  background: url(../images/icon.png) no-repeat;
  background-size: r(36);
  float: left;
  width: r(36);
  height: r(39);
  background-position: 0 r(-40);
  margin: 0 r(20); }

.topText {
  width: 100%;
  height: 100px;
  margin: 0 auto;
  position: relative;
  text-align: center;
  line-height: 100px; }

.topBox {
  text-align: center; }

.textItem {
  display: inline-block;
  transition: transform 0.3s;
  -webkit-transition: -webkit-transform 0.3s;
  width: 40px;
  height: 40px;
  margin: 0;
  padding: 0;
  border: 2px solid #333;
  background: #fbbd06;
  line-height: 37px;
  text-align: center;
  font-size: 24px;
  font-weight: bold;
  transform: rotate(270deg) scale(0);
  -webkit-transform: rotate(270deg) scale(0);
  color: #333; }

.textItem.t1 {
  transform: rotate(-10deg) scale(1);
  -webkit-transform: rotate(-10deg) scale(1); }

.textItem.t2 {
  transform: rotate(0deg) scale(1);
  -webkit-transform: rotate(0deg) scale(1); }

.textItem.t3 {
  transform: rotate(10deg) scale(1);
  -webkit-transform: rotate(10deg) scale(1); }

.textItem.t4 {
  transform: rotate(-15deg) scale(1);
  -webkit-transform: rotate(-15deg) scale(1); }

.textItem.t5 {
  transform: rotate(-15deg) scale(1);
  -webkit-transform: rotate(-15deg) scale(1); }

.textItem.t6 {
  transform: rotate(5deg) scale(1);
  -webkit-transform: rotate(5deg) scale(1); }

.canvasBox {
  text-align: center;
  position: relative; }
