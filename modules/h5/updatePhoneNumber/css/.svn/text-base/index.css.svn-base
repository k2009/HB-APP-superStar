.inline-button {
  display: inline-block;
  padding: 0 0.05rem;
  height: 0.2rem;
  line-height: 0.2rem;
  margin-left: 0.05rem;
  background: #eee;
  border: 1px solid #eee;
  border-radius: 0.02rem; }

.mui-navigate-right:after, .mui-push-right:after {
  content: ''; }
