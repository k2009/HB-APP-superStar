body {
  padding-bottom: 60px; }

.topText {
  width: 100%;
  height: 100px;
  margin: 0 auto;
  position: relative;
  text-align: center;
  line-height: 100px; }

.textItem {
  display: inline-block;
  transition: transform 0.3s;
  -webkit-transition: -webkit-transform 0.3s;
  width: 40px;
  height: 40px;
  margin: 0;
  padding: 0;
  border: 2px solid #333;
  background: #fbbd06;
  line-height: 37px;
  text-align: center;
  font-size: 24px;
  font-weight: bold;
  transform: rotate(270deg) scale(0);
  -webkit-transform: rotate(270deg) scale(0);
  color: #333; }

.textItem.t1 {
  transform: rotate(-10deg) scale(1);
  -webkit-transform: rotate(-10deg) scale(1); }

.textItem.t2 {
  transform: rotate(0deg) scale(1);
  -webkit-transform: rotate(0deg) scale(1); }

.textItem.t3 {
  transform: rotate(10deg) scale(1);
  -webkit-transform: rotate(10deg) scale(1); }

.textItem.t4 {
  transform: rotate(0deg) scale(1);
  -webkit-transform: rotate(0deg) scale(1); }

.textItem.t5 {
  transform: rotate(-15deg) scale(1);
  -webkit-transform: rotate(-15deg) scale(1); }

.textItem.t6 {
  transform: rotate(5deg) scale(1);
  -webkit-transform: rotate(5deg) scale(1); }

.mui-title {
  position: static;
  color: #555;
  margin: 0;
  font-size: r(24); }

.btnBox {
  text-align: center; }

.platform {
  width: 100%;
  position: relative;
  height: 230px; }

.platItem {
  display: block;
  overflow: hidden;
  position: absolute;
  border: 2px solid #fbbd06;
  border-radius: 5px;
  padding: 10px;
  font-size: 14px;
  color: #333;
  max-width: 96px; }
